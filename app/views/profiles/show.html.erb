<h2>Your Buskers Beat Profile</h2>

<div class="row">
  <div class="col-md-6">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Act / Busking Name</h3>
      </div>
      <div class="panel-body">
        <%= @profile.act %>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">About '<%= @profile.act %>'</h3>
      </div>
      <div class="panel-body">
        <%= @profile.bio %>
      </div>
    </div>

    <p>Where to find '<%= @profile.act %>'</p>
    <em>Geolocation placeholder</em>

  </div>
</div>
